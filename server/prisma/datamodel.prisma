type User {
  id: ID! @unique
  name: String!
  email: String! @unique
  password: String!
  role: UserRole!
  contactSites: [ContactSite]!
}

type UserRole {
  title: String! @unique
  permissions: [Permission!]!
}

type Permission {
  id: ID! @unique
  title: String!
}

type PersonStatus {
  title: String! @unique
  description: String
}

enum Sex {
  M
  F
}

enum Country {
  Barbados
  Dominica
}

enum MaritalStatus {
  Single
  Married
  Divorced
  Widowed
}

type ContactSite {
  id: ID! @unique
  name: String!
  country: Country!
}

type Note {
  id: ID! @unique
  date: DateTime!
  user: User!
  message: String!
}

type Team {
  id: ID! @unique
  name: String!
  name_search: String
  contactSite: ContactSite!
}

type Person {
  id: ID! @unique
  name: String!
  name_search: String
  email: String
  password: String
  telephone: String
  cellphone: String
  status: PersonStatus!
  address: String
  sex: Sex!
  religion: String
  age: Int
  assignee: User
  contactSite: ContactSite!
  notes: [Note!]!
  websiteUser: Boolean! @default(value: "false")
  maritalStatus: MaritalStatus
  invitation: Boolean! @default(value: "false")
  letter: Boolean! @default(value: "false")
  handbill: Boolean! @default(value: "false")
  guestTag: Boolean! @default(value: "false")
  transport: Boolean! @default(value: "false")
  openingNight: Boolean! @default(value: "false")
  dob: DateTime
  team: Team
  teamCode: String @unique
  teamCode_search: String @unique
  lesson1: Boolean! @default(value: "false")
  lesson2: Boolean! @default(value: "false")
  lesson3: Boolean! @default(value: "false")
  lesson4: Boolean! @default(value: "false")
  lesson5: Boolean! @default(value: "false")
  lesson6: Boolean! @default(value: "false")
  lesson7: Boolean! @default(value: "false")
  createdAt: DateTime! @createdAt
  updatedAt: DateTime! @updatedAt
}

type Attendance {
  date: DateTime!
  event: String
  person: Person!
}
